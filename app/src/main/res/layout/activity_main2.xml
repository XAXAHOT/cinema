<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/title_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="457dp"
            app:srcCompat="@drawable/favorite" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Энт"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/mess" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/r"
            app:layout_constraintEnd_toStartOf="@id/imageView4"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow_back"
            android:backgroundTint="@color/title_bg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_marginTop="423dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Энт"
        android:textSize="25dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_marginTop="470dp"
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Описание"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:layout_marginTop="510dp"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam porta velit hendrerit nisi dictum lacinia. Vivamus arcu magna, euismod sit amet tempor vitae, placerat a lorem. Fusce viverra nec nibh in malesuada. Mauris posuere, turpis quis scelerisque tincidunt, ex quam ornare diam, non tempor velit magna quis nisi. Donec ullamcorper feugiat vulputate. In massa risus, eleifend vel blandit et, malesuada et sem. Sed sed arcu vel sem facilisis finibus vel placerat massa. Nulla venenatis augue nibh. Nunc rutrum ullamcorper cursus. Nulla tempus cursus eros id bibendum. Aliquam gravida accumsan purus nec porta."
        android:textSize="20dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_marginTop="750dp"
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Кадры"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <HorizontalScrollView
        android:layout_marginTop="800dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_2"/>
        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>